@model IEnumerable<ReservationRestaurant.Data.Reservation>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="PreCreate">Create New</a>
</p>
<form asp-action="Search">
    <label class="control-label"> <b>Search Option:</b> </label>
    @Html.RadioButton("option", "ReservationId") <text> Reservation Id </text> 
    @Html.RadioButton("option", "Email") <text> Person Email </text>
    @Html.RadioButton("option", "Name")<text> First Name of Person</text>
    @Html.TextBox("search") 
    <input type = "submit" name = "submit" asp-action="Search" value= "Search" class="btn btn-primary"/>
</form>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Person Name</th>
            <th>
                @Html.DisplayNameFor(model => model.StartTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Guests)
            </th>
            <th>
                Reservation Status
            </th>
            <th>
                Reservation Origin
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sitting)
            </th>
            <th>
                Booked Tables
            </th>
            <th>
                Sitting Type
            </th>
            <th>
                Person Email
            </th>
            <th>
                Special Requirement
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>@item.Id</td>
            <td>@item.Person.FirstName @item.Person.LastName</td>
            <td>
                @Html.DisplayFor(modelItem => item.StartTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Guests)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationStatus.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationOrigin.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sitting.Name)
            </td>
             <td>
                <div>
                    @foreach (var table in item.Tables)
                    {
                        <div>
                            @table.Name
                        </div>
                    }
                </div>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Sitting.SittingType.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Person.Email)
            </td>
             <td>
                @Html.DisplayFor(modelItem => item.SpecialRequirement)
            </td>
            <td>
                <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
