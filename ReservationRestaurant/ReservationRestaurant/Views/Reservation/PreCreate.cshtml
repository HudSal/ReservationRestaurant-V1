@model ReservationRestaurant.Models.Reservation.PreCreate

@{
    ViewData["Title"] = "PreCreate";
}

<h1>Provide Reservation Detail</h1>

<h4>Booking for:</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PreCreate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Guests" class="control-label"></label>
                <input asp-for="Guests" class="form-control" />
                <span asp-validation-for="Guests" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="StartTime" class="control-label"></label>
                <input asp-for="StartTime" class="form-control" id="datepicker">
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SittingTypeId" class="control-label"></label>
                <select asp-for="SittingTypeId" class="form-control" asp-items="Model.SittingTypeSL">
                    <option value="">-- select sitting --</option>
                </select>
            </div>
            <div class="form-group">
                <span> @Model.Message @Model.StartTime </span>
            </div>
            <div class="form-group">
                <input type="submit" value="Next >>" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@*<div>
    <a asp-action="Index">Back to List</a>
</div>*@
@section Styles{
    <link href="~/css/jquery-ui.css" rel="stylesheet" />
}
@section Scripts{
    <script src="~/js/jquery-ui.js"></script>
    <script>
        $("#datepicker").datepicker({
            minDate: 0,
            maxDate: "@Model.AmountOfDaysForCalendar",
            dateFormat: "dd-mm-yy"
        });
    </script>

}
